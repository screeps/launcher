#!/usr/bin/env node
var fs = require('fs'),
    path = require('path'),
    ini = require('ini');
if(process.env.npm_package_screeps_mod || process.env.npm_package_screeps_bot) {

    var jsonFilename = path.resolve(__dirname, '../../mods.json');
    try {
        var screepsrcDir = path.resolve(__dirname, '../..');
        var screepsrc = ini.parse(
            fs.readFileSync(path.resolve(screepsrcDir, '.screepsrc'), {encoding: 'utf8'}));
        if(screepsrc.modfile) {
            jsonFilename = path.resolve(screepsrcDir, screepsrc.modfile);
        }
    }
    catch(e) {}

    var json;
    try {
        json = JSON.parse(fs.readFileSync(jsonFilename, {encoding: 'utf8'}));
    }
    catch(e) {
        if(e.code == 'ENOENT') {
            json = {};
        }
        else {
            throw e;
        }
    }

    json.mods = json.mods || [];
    json.bots = json.bots || {};

    if(!process.env.npm_package_main) {
        console.error(`Module "${process.env.npm_package_name}" has no "main" defined`);
    }
    else {
        if (process.env.npm_package_screeps_mod) {
            var newMods = [];
            var modMain = path.relative(path.dirname(jsonFilename), process.env.npm_package_main);
            json.mods.forEach(i => {
                if (i == modMain) {
                    return;
                }
                newMods.push(i);
            });
            json.mods = newMods;
            console.log(`Screeps mod "${process.env.npm_package_name}" has been successfully removed`);
        }
        if(process.env.npm_package_screeps_bot) {
            delete json.bots[process.env.npm_package_name];
            console.log(`Screeps bot "${process.env.npm_package_name}" has been successfully removed`);
        }

        fs.writeFileSync(jsonFilename, JSON.stringify(json, undefined, 2));
    }
}
